{
    "manifest_version": 3,
    "name": "TikTok Repost Scraper",
    "version": "1.0",
    "description": "Grab TikTok reposts from your profile and save them as a JSON file.",
    
    "permissions": [
      "activeTab",
      "scripting",
      "downloads"
    ],
    
    "host_permissions": [
      "https://www.tiktok.com/*"
    ],
  
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
  
    "background": {
      "service_worker": "background.js"
    },
  
    "content_scripts": [
      {
        "matches": ["https://www.tiktok.com/*"],
        "js": ["content.js"]
      }
    ]
  }
